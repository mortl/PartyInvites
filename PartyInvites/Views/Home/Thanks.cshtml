@model PartyInvites.Models.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thanks</title>
</head>
<body>
    <div> 
        <h1>Thank you, @Model.Name!</h1>
        @if (Model.WillAttend == true)
        {
           @:It's great that you're coming. The drinks are already in the fridge, and the metal is blasting! \m/ 
           } else {
             @:Sorry to hear you can't make it, but thanks for letting us know! \m/
           }
    </div>
</body>
</html>
