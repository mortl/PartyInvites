@model PartyInvites.Models.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link  rel="stylesheet" type="text/css" href="~/Content/Styles.css"/>
    <title>RsvpForm</title>
</head>
<body>
     @using (Html.BeginForm())
     {
            @Html.ValidationSummary()
            <p>Your name: @Html.TextBoxFor(guestResponse => guestResponse.Name)</p>
            <p>Your email: @Html.TextBoxFor(guestResponse => guestResponse.Email)</p>
            <p>Your phone: @Html.TextBoxFor(guestResponse => guestResponse.Phone)</p>
            <p>
                    Will you attend?
                    @Html.DropDownListFor(guestResponse => guestResponse.WillAttend, new [] {
                                new SelectListItem() {Text = "Yes, I'll be there", Value = bool.TrueString},
                                new SelectListItem() {Text = "No, I can't come", Value=bool.FalseString}
               
               },"Choose an option")
            </p>
            <input type="submit" value="Submit RSVP" />
         
     }
</body>
</html>
